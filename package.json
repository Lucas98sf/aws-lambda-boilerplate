{
	"name": "api",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"scripts": {
		"prepare": "husky install",
		"start": "ts-node -r tsconfig-paths/register -e 'require(\"./src\").handler(require(\"./event\"))'",
		"start:bundle": "node -e 'require(\"./dist/bundle\").handler(require(\"./event\"))'",
		"clean-install": "npx rimraf node_modules yarn.lock && yarn install",
		"prebuild": "npx rimraf dist",
		"build": "webpack",
		"predeploy": "npx rimraf node_modules && yarn --only=prod && yarn build",
		"deploy": "./aws/deploy.sh",
		"test": "jest --coverage"
	},
	"devDependencies": {
		"@types/aws-lambda": "^8.10.101",
		"@types/jest": "^28.1.5",
		"@types/node": "^18.0.1",
		"@typescript-eslint/eslint-plugin": "^5.30.4",
		"@typescript-eslint/parser": "^5.30.4",
		"dotenv": "^16.0.1",
		"eslint": "^8.2.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"husky": ">=6",
		"jest": "^28.1.3",
		"lint-staged": ">=10",
		"prettier": "^2.7.1",
		"ts-jest": "^28.0.5",
		"ts-loader": "^9.3.1",
		"ts-node": "^10.8.2",
		"tsconfig-paths": "^4.0.0",
		"tsconfig-paths-webpack-plugin": "^3.5.2",
		"typescript": "^4.7.4",
		"webpack": "^5.73.0",
		"webpack-cli": "^4.10.0"
	},
	"dependencies": {
		"aws-sdk": "^2.1173.0",
		"dotenv-webpack": "^8.0.0"
	},
	"lint-staged": {
		"*.ts": [
			"eslint --cache --fix",
			"prettier --write ."
		],
		"*.{json,md}": "prettier --write ."
	}
}
